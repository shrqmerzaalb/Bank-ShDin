  <div class="main">
    <div class="logo">💙 Virtual Bank</div>
    <h2>مرحباً، <span id="userDisplay"></span></h2>
    <div class="balance-card">الرصيد: <span id="balance">0</span> دينار</div>
    <div class="balance-card">رصيد ShDin: <span id="balanceShDin">0</span> ShDin</div>

    <!-- أقسام الدينار -->
    <div id="depositSection" class="card">
