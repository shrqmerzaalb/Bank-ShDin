<script>
let currentUser="";
let usersData={};
if(localStorage.getItem("usersData")) usersData=JSON.parse(localStorage.getItem("usersData"));

// مؤشرات اقتصادية
let totalShDin=0;
let exchangeRate=100; // 1 ShDin = 100 دينار
let liquidity=1000000;
let inflation=2;

function updateEconomicIndicators(){
  document.getElementById("exchangeRate").innerText = exchangeRate.toFixed(2);
  document.getElementById("liquidity").innerText = liquidity.toLocaleString();
  document.getElementById("inflation").innerText = inflation.toFixed(2) + "%";
  document.getElementById("totalShDin").innerText = totalShDin;
}

function login(){
  const username=document.getElementById("username").value.trim();
  if(!username){ alert("ادخل اسم المستخدم"); return; }
  currentUser=username;
  if(!usersData[currentUser]) usersData[currentUser]={balance:0,balanceShDin:0,history:[]};
  document.getElementById("userDisplay").innerText=currentUser;
  updateBalances(); renderHistory(); updateEconomicIndicators();
  document.getElementById("loginCard").classList.add("hidden");
  document.getElementById("bankContainer").classList.remove("hidden");
}

function saveData(){ localStorage.setItem("usersData",JSON.stringify(usersData)); }

function showSection(id){
  ['depositSection','withdrawSection','transferSection','depositShDinSection','withdrawShDinSection','transferShDinSection','historySection','ecoSection'].forEach(sec=>{
    document.getElementById(sec).style.display=(sec===id)?'block':'none';
  });
}

function renderHistory(){
  const ul=document.getElementById("history"); ul.innerHTML="";
  usersData[currentUser].history.slice().reverse().forEach(entry=>{
    const li=document.createElement("li"); li.textContent=entry; ul.appendChild(li);
  });
}

function updateBalances(){
  document.getElementById("balance").innerText=usersData[currentUser].balance;
  document.getElementById("balanceShDin").innerText=usersData[currentUser].balanceShDin;
}

// دينار
function deposit(){
  let amount=Number(document.getElementById("depositAmount").value);
  if(amount>0){
    usersData[currentUser].balance+=amount;
    usersData[currentUser].history.push(`إيداع: +${amount} دينار`);
    updateBalances(); document.getElementById("depositAmount").value=""; renderHistory(); saveData();
  } else alert("أدخل مبلغ صالح");
}
function withdraw(){
  let amount=Number(document.getElementById("withdrawAmount").value);
  if(amount>0 && amount<=usersData[currentUser].balance){
    usersData[currentUser].balance-=amount;
    usersData[currentUser].history.push(`سحب: -${amount} دينار`);
    updateBalances(); document.getElementById("withdrawAmount").value=""; renderHistory(); saveData();
  } else alert("رصيد غير كافٍ");
}
function transfer(){
  let amount=Number(document.getElementById("transferAmount").value);
  let to=document.getElementById("transferTo").value.trim();
  if(amount>0 && to && amount<=usersData[currentUser].balance){
    if(!usersData[to]) usersData[to]={balance:0,balanceShDin:0,history:[]};
    usersData[currentUser].balance-=amount;
    usersData[to].balance+=amount;
    usersData[currentUser].history.push(`تحويل: -${amount} دينار إلى ${to}`);
    usersData[to].history.push(`تحويل: +${amount} دينار من ${currentUser}`);
    updateBalances(); document.getElementById("transferAmount").value=""; document.getElementById("transferTo").value=""; renderHistory(); saveData();
  } else alert("بيانات غير صحيحة أو رصيد غير كافٍ");
}

// ShDin
function depositShDin(){
  let amount=Number(document.getElementById("depositShDinAmount").value);
  if(amount>0){
    usersData[currentUser].balanceShDin+=amount;
    usersData[currentUser].history.push(`إيداع: +${amount} ShDin`);
    totalShDin+=amount;
    liquidity+=amount*exchangeRate*0.5;
    inflation+=0.01*amount;
    updateBalances(); document.getElementById("depositShDinAmount").value=""; renderHistory(); updateEconomicIndicators(); saveData();
  } else alert("أدخل مبلغ صالح");
}
function withdrawShDin(){
  let amount=Number(document.getElementById("withdrawShDinAmount").value);
  if(amount>0 && amount<=usersData[currentUser].balanceShDin){
    usersData[currentUser].balanceShDin-=amount;
    usersData[currentUser].history.push(`سحب: -${amount} ShDin`);
    totalShDin-=amount;
    liquidity-=amount*exchangeRate*0.5;
    inflation-=0.01*amount;
    updateBalances(); document.getElementById("withdrawShDinAmount").value=""; renderHistory(); updateEconomicIndicators(); saveData();
  } else alert("رصيد ShDin غير كافٍ");
}
function transferShDin(){
  let amount=Number(document.getElementById("transferShDinAmount").value);
  let to=document.getElementById("transferShDinTo").value.trim();
  if(amount>0 && to && amount<=usersData[currentUser].balanceShDin){
    if(!usersData[to]) usersData[to]={balance:0,balanceShDin:0,history:[]};
    usersData[currentUser].balanceShDin-=amount;
    usersData[to].balanceShDin+=amount;
    usersData[currentUser].history.push(`تحويل: -${amount} ShDin إلى ${to}`);
    usersData[to].history.push(`تحويل: +${amount} ShDin من ${currentUser}`);
    totalShDin-=0; // لا يتغير إجمالي العملة عند التحويل
    updateBalances(); document.getElementById("transferShDinAmount").value=""; document.getElementById("transferShDinTo").value=""; renderHistory(); updateEconomicIndicators(); saveData();
  } else alert("بيانات غير صحيحة أو رصيد ShDin غير كافٍ");
}
</script>

</body>
</html>


