  <h2>تسجيل الدخول</h2>
  <input type="text" id="username" placeholder="ادخل اسم المستخدم">
  <button class="action-btn" onclick="login()">دخول</button>
</div>

<!-- البنك -->
<div class="container hidden" id="bankContainer">
  <div class="sidebar">
    <button onclick="showSection('depositSection')" title="إيداع دينار">💰</button>
    <button onclick="showSection('withdrawSection')" title="سحب دينار">🏧</button>
    <button onclick="showSection('transferSection')" title="تحويل دينار">🔄</button>
    <button onclick="showSection('depositShDinSection')" title="إيداع ShDin">🪙</button>
    <button onclick="showSection('withdrawShDinSection')" title="سحب ShDin">🪙</button>
