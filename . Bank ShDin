    if(!usersData[to]) usersData[to]={balance:0,balanceShDin:0,history:[]};
    usersData[currentUser].balanceShDin-=amount;
    usersData[to].balanceShDin+=amount;
    usersData[currentUser].history.push(`ØªØ­ÙˆÙŠÙ„: -${amount} ShDin Ø¥Ù„Ù‰ ${to}`);
